@using Microsoft.AspNetCore.Identity
@using RomaWatches.Models
@inject SignInManager<ApplicationUser> SignInManager

<div id="loginModal" class="fixed inset-0 z-50 hidden overflow-hidden">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" onclick="closeLoginModal()"></div>

    <!-- Modal Container - Slide from right -->
    <div class="absolute right-0 top-0 h-full w-full max-w-md bg-[#1d190e] text-gray-300 shadow-2xl transform transition-transform duration-300 ease-in-out translate-x-full"
        id="modalContent">
        <button class="absolute top-4 right-4 text-gray-500 hover:text-white transition-colors z-10"
            onclick="closeLoginModal()">
            <span class="material-symbols-outlined">close</span>
        </button>

        <div class="h-full overflow-y-auto">
            <div class="px-8 pt-8">
                <!-- Tabs -->
                <div class="flex border-b border-white/10">
                    <button id="loginTab"
                        class="flex flex-1 flex-col items-center justify-center border-b-[3px] border-b-primary pb-3 pt-2"
                        onclick="switchTab('login')">
                        <p class="text-white text-sm font-bold leading-normal tracking-wide">Đăng nhập</p>
                    </button>
                    <button id="registerTab"
                        class="flex flex-1 flex-col items-center justify-center border-b-[3px] border-b-transparent pb-3 pt-2"
                        onclick="switchTab('register')">
                        <p
                            class="text-gray-400 hover:text-white text-sm font-bold leading-normal tracking-wide transition-colors">
                            Đăng ký</p>
                    </button>
                </div>
            </div>

            <!-- Login Content -->
            <div id="loginContent" class="flex flex-col p-8">
                <h1 class="text-white tracking-light text-[32px] font-bold leading-tight text-left pb-4">Roma Watches
                </h1>

                <!-- Error/Success Messages -->
                <div id="loginMessage" class="mb-4 hidden"></div>

                <form id="loginForm" asp-controller="Account" asp-action="Login" method="post"
                    class="flex flex-col gap-4">
                    @Html.AntiForgeryToken()
                    <label class="flex flex-col">
                        <p class="text-white/80 text-base font-medium leading-normal pb-2">Email</p>
                        <input name="email" type="email"
                            class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-white/20 bg-[#2b2618] h-14 placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all"
                            placeholder="Enter your email" required />
                    </label>
                    <label class="flex flex-col">
                        <p class="text-white/80 text-base font-medium leading-normal pb-2">Mật khẩu</p>
                        <div class="relative flex w-full flex-1 items-stretch">
                            <input id="loginPassword" name="password" type="password"
                                class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-white/20 bg-[#2b2618] h-14 placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all pr-12"
                                placeholder="Enter your password" required />
                            <div class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-500 cursor-pointer"
                                onclick="togglePasswordVisibility('loginPassword')">
                                <span class="material-symbols-outlined" id="loginPasswordIcon">visibility_off</span>
                            </div>
                        </div>
                    </label>
                    <button type="submit"
                        class="flex items-center justify-center w-full h-14 px-6 mt-4 rounded-lg bg-primary text-background-dark text-base font-bold leading-normal tracking-wide hover:bg-primary/90 transition-colors">Đăng
                        nhập</button>
                </form>

                <a class="text-gray-400 text-sm font-normal leading-normal py-3 text-left underline hover:text-primary transition-colors"
                    href="#" onclick="showForgotPassword(); return false;">Quên mật khẩu?</a>

                <div class="flex items-center gap-4 my-6">
                    <hr class="w-full border-white/10" />
                    <p class="text-sm text-gray-500">Hoặc</p>
                    <hr class="w-full border-white/10" />
                </div>

                <div class="flex flex-col gap-4">
                    <!-- Google Sign-In Button will be rendered here -->
                    <div id="googleSignInButton" class="flex justify-center"></div>
                    
                    <!-- Fallback custom button if Google button doesn't render -->
                    <button id="btnGoogleLoginFallback" style="display: none;"
                        class="flex items-center justify-center w-full h-14 px-6 rounded-lg bg-white/5 border border-white/10 text-white text-base font-semibold hover:bg-white/10 transition-colors">
                        <img alt="Google logo" class="h-6 w-auto mr-3"
                            src="https://images.seeklogo.com/logo-png/27/1/google-logo-png_seeklogo-273191.png" />
                        Tiếp tục với Google
                    </button>
                </div>
            </div>

            <!-- Register Content -->
            <div id="registerContent" class="flex flex-col p-8 hidden">
                <h1 class="text-white tracking-light text-[32px] font-bold leading-tight text-left pb-4">Đăng ký tài
                    khoản</h1>

                <!-- Error/Success Messages -->
                <div id="registerMessage" class="mb-4 hidden"></div>

                <form id="registerForm" asp-controller="Account" asp-action="Register" method="post"
                    class="flex flex-col gap-4">
                    @Html.AntiForgeryToken()
                    <div class="grid grid-cols-2 gap-4">
                        <label class="flex flex-col">
                            <p class="text-white/80 text-base font-medium leading-normal pb-2">Tên</p>
                            <input name="firstName" type="text"
                                class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-white/20 bg-[#2b2618] h-14 placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all"
                                placeholder="First name" required />
                        </label>
                        <label class="flex flex-col">
                            <p class="text-white/80 text-base font-medium leading-normal pb-2">Họ</p>
                            <input name="lastName" type="text"
                                class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-white/20 bg-[#2b2618] h-14 placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all"
                                placeholder="Last name" required />
                        </label>
                    </div>
                    <label class="flex flex-col">
                        <p class="text-white/80 text-base font-medium leading-normal pb-2">Email</p>
                        <input name="email" type="email"
                            class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-white/20 bg-[#2b2618] h-14 placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all"
                            placeholder="Enter your email" required />
                    </label>
                    <label class="flex flex-col">
                        <p class="text-white/80 text-base font-medium leading-normal pb-2">Mật khẩu</p>
                        <div class="relative flex w-full flex-1 items-stretch">
                            <input id="registerPassword" name="password" type="password"
                                class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-white/20 bg-[#2b2618] h-14 placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all pr-12"
                                placeholder="Enter your password" required />
                            <div class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-500 cursor-pointer"
                                onclick="togglePasswordVisibility('registerPassword')">
                                <span class="material-symbols-outlined" id="registerPasswordIcon">visibility_off</span>
                            </div>
                        </div>
                    </label>
                    <label class="flex flex-col">
                        <p class="text-white/80 text-base font-medium leading-normal pb-2">Xác nhận mật khẩu</p>
                        <div class="relative flex w-full flex-1 items-stretch">
                            <input id="confirmPassword" name="confirmPassword" type="password"
                                class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-white/20 bg-[#2b2618] h-14 placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all pr-12"
                                placeholder="Confirm password" required />
                            <div class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-500 cursor-pointer"
                                onclick="togglePasswordVisibility('confirmPassword')">
                                <span class="material-symbols-outlined" id="confirmPasswordIcon">visibility_off</span>
                            </div>
                        </div>
                    </label>
                    <button type="submit"
                        class="flex items-center justify-center w-full h-14 px-6 mt-4 rounded-lg bg-primary text-background-dark text-base font-bold leading-normal tracking-wide hover:bg-primary/90 transition-colors">Đăng
                        ký</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function switchTab(tab) {
        const loginTab = document.getElementById('loginTab');
        const registerTab = document.getElementById('registerTab');
        const loginContent = document.getElementById('loginContent');
        const registerContent = document.getElementById('registerContent');

        if (tab === 'login') {
            loginTab.classList.add('border-b-primary');
            loginTab.classList.remove('border-b-transparent');
            loginTab.querySelector('p').classList.remove('text-gray-400');
            loginTab.querySelector('p').classList.add('text-white');

            registerTab.classList.remove('border-b-primary');
            registerTab.classList.add('border-b-transparent');
            registerTab.querySelector('p').classList.add('text-gray-400');
            registerTab.querySelector('p').classList.remove('text-white');

            loginContent.classList.remove('hidden');
            registerContent.classList.add('hidden');
        } else {
            registerTab.classList.add('border-b-primary');
            registerTab.classList.remove('border-b-transparent');
            registerTab.querySelector('p').classList.remove('text-gray-400');
            registerTab.querySelector('p').classList.add('text-white');

            loginTab.classList.remove('border-b-primary');
            loginTab.classList.add('border-b-transparent');
            loginTab.querySelector('p').classList.add('text-gray-400');
            loginTab.querySelector('p').classList.remove('text-white');

            registerContent.classList.remove('hidden');
            loginContent.classList.add('hidden');
        }
    }

    function togglePasswordVisibility(inputId) {
        const input = document.getElementById(inputId);
        const icon = document.getElementById(inputId + 'Icon');
        if (input.type === 'password') {
            input.type = 'text';
            icon.textContent = 'visibility';
        } else {
            input.type = 'password';
            icon.textContent = 'visibility_off';
        }
    }

    function showMessage(elementId, message, isError) {
        const messageDiv = document.getElementById(elementId);
        messageDiv.textContent = message;
        messageDiv.className = isError
            ? 'mb-4 p-4 rounded-lg bg-red-500/20 border border-red-500 text-red-300'
            : 'mb-4 p-4 rounded-lg bg-green-500/20 border border-green-500 text-green-300';
        messageDiv.classList.remove('hidden');
        setTimeout(() => {
            messageDiv.classList.add('hidden');
        }, 5000);
    }

    function showForgotPassword() {
        showMessage('loginMessage', 'Forgot password feature coming soon!', false);
    }

    // Handle form submissions
    document.getElementById('loginForm')?.addEventListener('submit', async function (e) {
        e.preventDefault();
        const submitButton = this.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        submitButton.disabled = true;
        submitButton.textContent = 'Logging in...';

        try {
            const formData = new FormData(this);
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (token) {
                formData.append('__RequestVerificationToken', token);
            }
            const response = await fetch('/Account/Login', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) {
                throw new Error('Mạng không ổn định');
            }

            const result = await response.json();
            if (result.success) {
                showMessage('loginMessage', result.message || 'Đăng nhập thành công!', false);
                setTimeout(() => {
                    if (result.redirectUrl) {
                        window.location.href = result.redirectUrl;
                    } else {
                        window.location.reload();
                    }
                }, 1000);
            } else {
                showMessage('loginMessage', result.message || 'Đăng nhập thất bại. Vui lòng thử lại.', true);
                submitButton.disabled = false;
                submitButton.textContent = originalText;
            }
        } catch (error) {
            console.error('Login error:', error);
            showMessage('loginMessage', 'Có lỗi xảy ra. Vui lòng thử lại.', true);
            submitButton.disabled = false;
            submitButton.textContent = originalText;
        }
    });

    document.getElementById('registerForm')?.addEventListener('submit', async function (e) {
        e.preventDefault();
        const submitButton = this.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        submitButton.disabled = true;
        submitButton.textContent = 'Registering...';

        try {
            const formData = new FormData(this);
            const password = formData.get('password');
            const confirmPassword = formData.get('confirmPassword');

            if (password !== confirmPassword) {
                showMessage('registerMessage', 'Mật khẩu không khớp!', true);
                submitButton.disabled = false;
                submitButton.textContent = originalText;
                return;
            }

            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (token) {
                formData.append('__RequestVerificationToken', token);
            }
            const response = await fetch('/Account/Register', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) {
                throw new Error('Mạng không ổn định');
            }

            const result = await response.json();
            if (result.success) {
                showMessage('registerMessage', result.message || 'Đăng ký thành công!', false);
                setTimeout(() => {
                    switchTab('login');
                    showMessage('loginMessage', 'Vui lòng đăng nhập bằng thông tin đăng nhập của bạn.', false);
                    this.reset();
                }, 1500);
            } else {
                showMessage('registerMessage', result.message || 'Đăng ký thất bại. Vui lòng thử lại.', true);
            }
            submitButton.disabled = false;
            submitButton.textContent = originalText;
        } catch (error) {
            console.error('Registration error:', error);
            showMessage('registerMessage', 'Có lỗi xảy ra. Vui lòng thử lại.', true);
            submitButton.disabled = false;
            submitButton.textContent = originalText;
        }
    });
</script>

<!-- Google Identity Services script -->
<script src="https://accounts.google.com/gsi/client" async defer></script>
<script>
  function handleCredentialResponse(response) {
      console.log("Đang xử lý đăng nhập Google...");
      
      // Show loading on the button area
      const buttonDiv = document.getElementById('googleSignInButton');
      if (buttonDiv) {
          buttonDiv.innerHTML = '<div class="flex items-center justify-center h-14 text-white/70">Đang đăng nhập...</div>';
      }

      // Gửi token lên server để verify và đăng nhập
      fetch('/api/auth/google', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id_token: response.credential })
      })
      .then(r => {
          if (!r.ok) {
              throw new Error('Đăng nhập thất bại');
          }
          return r.json();
      })
      .then(data => {
          console.log('Server response:', data);
          if (data.ok) {
              // Hiển thị thông báo thành công
              showMessage('loginMessage', `Chào mừng ${data.name || 'user'}! Đăng nhập thành công.`, false);
              // Reload trang sau 1 giây
              setTimeout(() => {
                  window.location.reload();
              }, 1000);
          } else {
              showMessage('loginMessage', data.message || 'Đăng nhập Google thất bại.', true);
              // Re-render button on error
              initializeGoogleSignIn();
          }
      })
      .catch(err => {
          console.error('Google login error:', err);
          showMessage('loginMessage', 'Có lỗi xảy ra khi đăng nhập với Google. Vui lòng thử lại.', true);
          // Re-render button on error
          initializeGoogleSignIn();
      });
  }

  function initializeGoogleSignIn() {
      try {
          // Khởi tạo Google Identity Services
          google.accounts.id.initialize({
              client_id: '106868822898-9ltmbs2ona27tvtqrk09c7pqea87ge1m.apps.googleusercontent.com',
              callback: handleCredentialResponse,
              ux_mode: 'popup', // Use popup instead of redirect
              auto_select: false
          });

          // Render the Google Sign-In button
          google.accounts.id.renderButton(
              document.getElementById('googleSignInButton'),
              {
                  theme: 'filled_black',
                  size: 'large',
                  width: '100%',
                  text: 'continue_with',
                  shape: 'rectangular',
                  logo_alignment: 'left'
              }
          );
          
          console.log('Google Sign-In button rendered successfully');
      } catch (error) {
          console.error('Error initializing Google Sign-In:', error);
          // Show fallback button if Google button fails
          document.getElementById('btnGoogleLoginFallback').style.display = 'flex';
      }
  }

  // Initialize when window loads and Google script is ready
  window.addEventListener('load', function() {
      // Wait a bit for Google script to be fully loaded
      setTimeout(function() {
          if (typeof google !== 'undefined' && google.accounts && google.accounts.id) {
              initializeGoogleSignIn();
          } else {
              console.error('Google Identity Services not loaded');
              document.getElementById('btnGoogleLoginFallback').style.display = 'flex';
          }
      }, 500);
  });
</script>
