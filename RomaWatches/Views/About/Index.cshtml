@{
    // Thiết lập tiêu đề trang và layout (Layout = null vì trang này tự định nghĩa cấu trúc HTML đầy đủ).
    ViewData["Title"] = "Về chúng tôi - ROMA WATCHES";
    Layout = null;
}
<!DOCTYPE html>
<html class="dark" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"]</title>
    <!-- Import Tailwind CSS và các font chữ từ Google Fonts -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script>
        // Cấu hình Tailwind CSS: Dark mode, màu sắc chủ đạo, font chữ.
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#ecb613", // Màu vàng kim chủ đạo.
                        "background-light": "#f8f8f6",
                        "background-dark": "#221d10", // Màu nền tối.
                    },
                    fontFamily: {
                        "display": ["Noto Serif", "serif"],
                        "sans": ["Noto Sans", "sans-serif"],
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "0.75rem",
                        "xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        /* Style cho icon Material Symbols */
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-sans">
    <div class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden">
        <!-- Header Partial: Thanh điều hướng -->
        @await Html.PartialAsync("_Header")
        <div class="h-[72px]"></div> <!-- Spacer cho fixed header -->
        
        <div class="layout-container flex h-full grow flex-col">
            <div class="px-4 sm:px-10 md:px-20 lg:px-40 flex flex-1 justify-center py-5">
                <div class="layout-content-container flex flex-col max-w-[1200px] flex-1">
                    <main class="flex flex-col gap-16 md:gap-24 py-16 md:py-24">
                        
                        <!-- Hero Section: Phần giới thiệu chính -->
                        <section class="flex flex-col items-center text-center px-4">
                            <h1 class="font-display text-4xl md:text-6xl font-black leading-tight tracking-[-0.033em] mb-4 text-white">Di Sản Vượt Thời Gian</h1>
                            <p class="text-base md:text-lg font-normal leading-relaxed text-white/80 max-w-3xl mx-auto">Tại ROMA WATCHES, chúng tôi không chỉ chế tác đồng hồ. Chúng tôi kiến tạo di sản. Mỗi cỗ máy thời gian là một minh chứng cho cam kết về sự xuất sắc, kết hợp nghệ thuật thủ công truyền thống với tinh thần đổi mới không ngừng.</p>
                        </section>

                        <!-- Story Section: Câu chuyện thương hiệu -->
                        <section class="grid grid-cols-1 md:grid-cols-2 items-center gap-8 md:gap-12 px-4">
                            <div class="flex-1 order-2 md:order-1">
                                <h2 class="text-3xl md:text-4xl font-bold font-display leading-tight tracking-[-0.015em] mb-6 text-white">Câu Chuyện Của Chúng Tôi</h2>
                                <p class="text-base font-normal leading-loose text-white/80">Hành trình của ROMA WATCHES bắt đầu từ năm 1884 trong một xưởng chế tác khiêm tốn, nơi niềm đam mê cho sự chính xác và vẻ đẹp vĩnh cửu được nhen nhóm. Từ những ngày đầu thành lập, tầm nhìn của chúng tôi đã luôn rõ ràng: tạo ra những chiếc đồng hồ không chỉ để đo đếm thời gian, mà còn để lưu giữ những khoảnh khắc quý giá của cuộc sống. Qua nhiều thế hệ, chúng tôi đã không ngừng hoàn thiện kỹ nghệ, biến mỗi chiếc đồng hồ ROMA thành một biểu tượng của sự sang trọng và đẳng cấp trường tồn.</p>
                            </div>
                            <div class="flex-1 w-full order-1 md:order-2">
                                <div class="w-full bg-center bg-no-repeat bg-cover aspect-square rounded-xl shadow-lg" data-alt="A vintage black and white photograph of the original watchmaking workshop." style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuCu0s_JE_ERvGOIrwg_c6zHzP8BShAnhy4cltihASaxWCZYKbLnJ-AFrQ_K_c-3s4oix5UYmtDQ1KpwsYuRwrLERu8Lx4qhHLYT4pJyFgzXlaxNkMMrmJkh88ozPti9bnJ5hJtsQYFynE90sacbF9hSgh5qpyjmw-oGAMzgceWxIvsqeedhnuQUkK9I9c8UzMqXm29psxbL-ovSWVuQ3vbSOyyy8O9iwofnXX0TqzwrEyKKpyxhVxJ9zObi7GoJbogH7VDj3h7BC9c");'></div>
                            </div>
                        </section>

                        <!-- Philosophy Section: Triết lý chế tác -->
                        <section class="px-4">
                            <div class="w-full min-h-[500px] md:min-h-[600px] bg-center bg-no-repeat bg-cover rounded-xl shadow-lg flex items-center justify-center text-center p-8 md:p-12" data-alt="A master watchmaker meticulously assembling a watch movement." style='background-image: linear-gradient(rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.7) 100%), url("https://lh3.googleusercontent.com/aida-public/AB6AXuAJoBdBjbky2EGO2821HpxIz9QOF0kFnWqQ4t3pUyzoC-M46oxWsYDnjh0mruWTb-2Z5up57ep4I5qZcfuPVBmyktRWWDyMICIVDjftOmL2cG8uoWWLsRb98UDjxj49VGbwck6mXUhX9ygzBkID7qOQtA-chjrc2neMML9Uzfrh5N0HurG-pa-R6WaI7ww4JscYWrSSVTlxqImv0lYSEZy3rZxSnpWVvtx-5oDG4ZmWiyJY-Pa1Reu4HACxFaMwqxs3oLz3c5M7dkE");'>
                                <div class="flex flex-col gap-6 text-white max-w-4xl">
                                    <h2 class="font-display text-4xl md:text-5xl font-bold leading-tight tracking-[-0.033em]">Triết Lý Chế Tác</h2>
                                    <p class="text-base md:text-lg font-normal leading-relaxed">Ba trụ cột cốt lõi định hình nên mọi khía cạnh trong nghệ thuật chế tác của chúng tôi: Thiết kế vượt thời gian, Chất lượng tuyệt hảo và Đổi mới tiên phong. Đây chính là linh hồn ẩn sau mỗi kiệt tác mang tên ROMA WATCHES.</p>
                                </div>
                            </div>
                        </section>

                        <!-- Core Values Section: Giá trị cốt lõi -->
                        <section class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 px-4 text-center">
                            <div class="flex flex-col items-center gap-4 p-6 rounded-lg bg-white/5">
                                <div class="flex items-center justify-center h-16 w-16 rounded-full bg-primary/10 text-primary mb-2">
                                    <span class="material-symbols-outlined text-4xl">hourglass_empty</span>
                                </div>
                                <h3 class="text-xl font-bold font-display text-white">Thiết Kế Vượt Thời Gian</h3>
                                <p class="text-sm leading-relaxed text-white/70">Các thiết kế của chúng tôi là sự giao thoa giữa nét thẩm mỹ cổ điển và những đường nét hiện đại, tạo nên vẻ đẹp thanh lịch, sang trọng và không bao giờ lỗi mốt.</p>
                            </div>
                            <div class="flex flex-col items-center gap-4 p-6 rounded-lg bg-white/5">
                                <div class="flex items-center justify-center h-16 w-16 rounded-full bg-primary/10 text-primary mb-2">
                                    <span class="material-symbols-outlined text-4xl">verified</span>
                                </div>
                                <h3 class="text-xl font-bold font-display text-white">Chất Lượng Tuyệt Hảo</h3>
                                <p class="text-sm leading-relaxed text-white/70">Từ việc lựa chọn vật liệu cao cấp nhất đến khâu hoàn thiện tỉ mỉ, mỗi chi tiết đều được kiểm định nghiêm ngặt để đảm bảo chất lượng và độ bền vượt trội.</p>
                            </div>
                            <div class="flex flex-col items-center gap-4 p-6 rounded-lg bg-white/5">
                                <div class="flex items-center justify-center h-16 w-16 rounded-full bg-primary/10 text-primary mb-2">
                                    <span class="material-symbols-outlined text-4xl">emoji_objects</span>
                                </div>
                                <h3 class="text-xl font-bold font-display text-white">Đổi Mới Tiên Phong</h3>
                                <p class="text-sm leading-relaxed text-white/70">Chúng tôi tôn vinh di sản bằng cách không ngừng cải tiến. Xưởng chế tác của ROMA là nơi các kỹ thuật truyền thống hội tụ cùng công nghệ tiên tiến nhất.</p>
                            </div>
                        </section>

                        <!-- Craftsmanship Section: Nghệ thuật thủ công -->
                        <section class="flex flex-col items-center gap-8 px-4">
                            <div class="text-center max-w-3xl">
                                <h2 class="text-3xl md:text-4xl font-bold font-display leading-tight tracking-[-0.015em] mb-4 text-white">Nghệ Thuật Thủ Công Tinh Xảo</h2>
                                <p class="text-base font-normal leading-relaxed text-white/80">Chế tác một chiếc đồng hồ ROMA là một bản giao hưởng của kỹ năng, sự kiên nhẫn và niềm đam mê. Hãy cùng khám phá quy trình tỉ mỉ đã thổi hồn vào từng cỗ máy thời gian của chúng tôi.</p>
                            </div>
                            <div class="w-full grid grid-cols-2 md:grid-cols-4 gap-4">
                                <div class="col-span-2 row-span-2 rounded-xl overflow-hidden shadow-lg">
                                    <div class="w-full h-full bg-center bg-no-repeat bg-cover min-h-[400px]" data-alt="Close-up of a watch's intricate gear mechanism." style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuBAuzdyw9XljlVZO9EQeCkmiTwVRHcjjaeNgigoJheX0CyQ1yQF2MTEq-LJ5bG3EvFl3wDRneaDq_xO8rTn9ztPTnPfEiTq2TSx7rSohCrAEAfpiEYrgiXe52YRVYKXG2_JIMJM0MnNruzJuxtci4Tx_rGU9RTErl2LchKdCrctYH0LmVNhbWSn2sAWwR4rHdPLUp91pl03_rVrsaQ0b3qwotIMU6DGgBQIWX-tF4eQizhJjRhkZ4MErILNeakAu-REGaKXQoPDxkU");'></div>
                                </div>
                                <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
                                    <div class="w-full h-full bg-center bg-no-repeat bg-cover" data-alt="Watchmaker's hands carefully placing a jewel into the movement." style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuDKcU199wl4jepYEE97aQBfg7DhkuURBmTF_4jk6xl51xbrDKa1X-gSQSxLZSCmrFXaMKDSu5y44sfEUSkoHq3mapymh1X6XvVl7AcfXYbrXa6SD_WtH6HZuL6Ph-0J4nwnFFAY8vLqvSGmKQqx-Gk8feNtwb-jffVrTeGmlSHcv5oYGXYc0gNZejSvSqOdvfAZh2gCijTcCvG30rThosN0CPRVKc2exjMtPCgAwm4m_0v2YP7fFl4oHebwJiv7x2smsBDN8Dn17vQ");'></div>
                                </div>
                                <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
                                    <div class="w-full h-full bg-center bg-no-repeat bg-cover" data-alt="A finished watch face gleaming under a soft light." style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuAqVts66HXVGqouoFBtIrp2BF7x-5ldhZZe1JBbcDv59pOTmHRx703ZSB1BEBIncZilYf91eZoGdxfRWLLwd9tjt96M1Q5PPfZsu8kxe07UYi8_iJqcEzfibIz6r4irlXORb8OnrlUq4CqCh-2KvE36vROisdTkwheSCpF72OSojnNQj6px6gp0Q4ytwahpAQWuqG3wsxrkwUF-blwulDbkWL3Mra0TTUvHdowUA42Dy1VINqlK287TqHW5badHsJNHN4ZBp6uOd80");'></div>
                                </div>
                                <div class="col-span-2 aspect-[2/1] rounded-xl overflow-hidden shadow-lg">
                                    <div class="w-full h-full bg-center bg-no-repeat bg-cover" data-alt="A collection of luxury watches displayed elegantly." style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuD63z8yaILpljTZ3OVRW2ZBBGD85RskzBOWSqHsgRygg5X-UHR-q65K1Rq7w-Cj4NcEOzDRTfY8KOrloBbx_obzCv6OsnSsuposYa09cJHjtAHP8f4mZFDAHEM0N1vP9eA-0Jxe8d5pjGIaKq3dH4gfSxqV_f5IqSGzEuBlx2ahfrXg5DAJn6fVPtnk-dRxx5qNZCZU4YRc8M2w9-gp19lcL_kqM3CTApOJqbIx6DAfru2GDpsbQ84vCgQEhxY7PRr8mVH2XuhAzlU");'></div>
                                </div>
                            </div>
                        </section>

                        <!-- CTA Section: Kêu gọi hành động -->
                        <section class="text-center px-4 py-12 md:py-16 rounded-xl bg-white/5 mx-4">
                            <h2 class="text-3xl font-bold font-display leading-tight tracking-[-0.015em] mb-4 text-white">Khám Phá Di Sản</h2>
                            <p class="text-base font-normal leading-relaxed text-white/80 max-w-xl mx-auto mb-8">Câu chuyện về nghệ thuật chế tác của chúng tôi được kể lại trọn vẹn nhất trên cổ tay bạn. Hãy khám phá những bộ sưu tập đồng hồ đẳng cấp và tìm ra cỗ máy thời gian của riêng mình.</p>
                            <a asp-controller="Product" asp-action="Index" class="inline-flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-6 bg-primary text-background-dark text-base font-bold leading-normal tracking-[0.015em] hover:bg-opacity-90 transition-all shadow-md">
                                <span class="truncate">Khám Phá Các Bộ Sưu Tập</span>
                            </a>
                        </section>
                    </main>
                </div>
            </div>
        </div>
        <!-- Footer Partial: Chân trang -->
        @await Html.PartialAsync("_Footer")
    </div>
    <!-- Modal Login và Scripts chung -->
    @await Html.PartialAsync("_LoginModal")
    @await Html.PartialAsync("_CommonScripts")
</body>
</html>

