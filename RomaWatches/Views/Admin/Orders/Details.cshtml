                    </a>
                    <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="#">
                        <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">bar_chart</span>
                        <p class="text-sm font-medium leading-normal">Báo cáo</p>
                    </a>
                </nav>
            </div>
            <div class="mt-auto flex flex-col gap-1">
                <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="#">
                    <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">settings</span>
                    <p class="text-sm font-medium leading-normal">Cài đặt</p>
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="w-full">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg w-full text-left">
                        <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">logout</span>
                        <p class="text-sm font-medium leading-normal">Đăng xuất</p>
                    </button>
                </form>
            </div>
        </aside>
        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto p-8">
            <div class="max-w-5xl mx-auto">
                <!-- Breadcrumbs -->
                <div class="flex flex-wrap gap-2 py-4 mb-6">
                    <a class="text-gray-500 dark:text-gray-400 hover:text-primary text-sm font-medium" href="/Admin/Dashboard">Dashboard</a>
                    <span class="text-gray-500 dark:text-gray-400 text-sm">/</span>
                    <a class="text-gray-500 dark:text-gray-400 hover:text-primary text-sm font-medium" href="/Admin/Orders">Quản lý Đơn hàng</a>
                    <span class="text-gray-500 dark:text-gray-400 text-sm">/</span>
                    <span class="text-gray-900 dark:text-white text-sm font-medium">Chi tiết đơn hàng @orderNumber</span>
                </div>
                
                <!-- Order Header -->
                <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 mb-6 shadow-sm border border-gray-200 dark:border-gray-800">
                    <div class="flex flex-wrap justify-between items-start gap-4 mb-4">
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Đơn hàng @orderNumber</h1>
                            <p class="text-gray-500 dark:text-gray-400">Đặt ngày: @orderDate</p>
                        </div>
                        <div class="flex flex-col items-end gap-2">
                            <span class="inline-flex items-center gap-1.5 py-1.5 px-3 rounded-full text-xs font-medium @orderStatusColor">@orderStatusText</span>
                            <span class="inline-flex items-center gap-1.5 py-1.5 px-3 rounded-full text-xs font-medium @paymentStatusColor">@paymentStatusText</span>
                        </div>
                    </div>
                    
                    @if (canChangeStatus)
                    {
                        <div class="flex gap-2 mt-4">
                            <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Chuyển trạng thái:</label>
                            <select class="text-sm border border-gray-300 dark:border-gray-700 rounded-lg px-3 py-1.5 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary" onchange="updateOrderStatus(@Model.Id, this.value)" data-current-status="@Model.Status">
                                @if (Model.Status == OrderStatus.Pending)
                                {
                                    <option value="Pending" selected>Đang xử lý</option>
                                }
                                else
                                {
                                    <option value="Pending">Đang xử lý</option>
                                }
                                @if (Model.Status == OrderStatus.Approved)
                                {
                                    <option value="Approved" selected>Đã duyệt</option>
                                }
                                else
                                {
                                    <option value="Approved">Đã duyệt</option>
                                }
                                @if (Model.Status == OrderStatus.Completed)
                                {
                                    <option value="Completed" selected>Đã giao</option>
                                }
                                else
                                {
                                    <option value="Completed">Đã giao</option>
                                }
                                @if (Model.Status == OrderStatus.Cancelled)
                                {
                                    <option value="Cancelled" selected>Đã hủy</option>
                                }
                                else
                                {
                                    <option value="Cancelled">Đã hủy</option>
                                }
                            </select>
                        </div>
                    }
                </div>
                
                <!-- Customer Info -->
                <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 mb-6 shadow-sm border border-gray-200 dark:border-gray-800">
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Thông tin khách hàng</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Họ và tên</p>
                            <p class="text-base font-medium text-gray-900 dark:text-white">@Model.FullName</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Số điện thoại</p>
                            <p class="text-base font-medium text-gray-900 dark:text-white">@Model.PhoneNumber</p>
                        </div>
                        @if (Model.User != null)
                        {
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Email</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">@Model.User.Email</p>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Shipping Address -->
                <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 mb-6 shadow-sm border border-gray-200 dark:border-gray-800">
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Địa chỉ giao hàng</h2>
                    <p class="text-base text-gray-900 dark:text-white">@Model.Address, @Model.Ward, @Model.Province</p>
                </div>
                
                <!-- Payment Method -->
                <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 mb-6 shadow-sm border border-gray-200 dark:border-gray-800">
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Phương thức thanh toán</h2>
                    <p class="text-base text-gray-900 dark:text-white">@GetPaymentMethodText(Model.PaymentMethod)</p>
                </div>
                
                <!-- Order Items -->
                <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 mb-6 shadow-sm border border-gray-200 dark:border-gray-800">
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Sản phẩm</h2>
                    <div class="space-y-4">
                        @if (Model.OrderItems != null && Model.OrderItems.Any())
                        {
                            @foreach (var item in Model.OrderItems)
                            {
                                <div class="flex items-start gap-4 pb-4 border-b border-gray-200 dark:border-gray-700 last:border-0">
                                    <img class="h-24 w-24 rounded-lg object-cover bg-gray-200 dark:bg-gray-700" 
                                         src="@(string.IsNullOrEmpty(item.Product.ImageUrl) ? "https://images.unsplash.com/photo-1523275335684-37898b6baf30" : item.Product.ImageUrl)" 
                                         alt="@item.Product.Name" />
                                    <div class="flex-1">
                                        <p class="font-bold text-gray-900 dark:text-white leading-tight">@item.Product.Name</p>
                                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">@item.Product.Brand</p>
                                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Số lượng: @item.Quantity</p>
                                    </div>
                                    <p class="font-bold text-gray-900 dark:text-white">@((item.Quantity * item.Price).ToString("N0")) ₫</p>
                                </div>
                            }
                        }
                    </div>
                    <div class="mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
                        <div class="flex justify-between items-baseline">
                            <span class="text-lg font-bold text-gray-900 dark:text-white">Tổng cộng</span>
                            <span class="text-2xl font-bold text-gray-900 dark:text-white">@Model.TotalAmount.ToString("N0") ₫</span>
                        </div>
                    </div>
                </div>
                
                <!-- Back Button -->
                <div class="flex justify-start">
                    <a href="/Admin/Orders" class="flex items-center gap-2 px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                        <span class="material-symbols-outlined text-base">arrow_back</span>
                        <span>Quay lại danh sách</span>
                    </a>
                </div>
            </div>
        </main>
    </div>
    
    @Html.AntiForgeryToken()
    
    <script>
        // Hàm hiển thị thông báo
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-24 right-4 z-50 px-6 py-4 rounded-lg shadow-lg transform transition-all duration-300 translate-x-full ${
                type === 'error' ? 'bg-red-500' : 
                type === 'success' ? 'bg-green-500' : 
                'bg-primary'
            } text-white font-medium`;
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined">${
                        type === 'error' ? 'error' : 
                        type === 'success' ? 'check_circle' : 
                        'info'
                    }</span>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
                notification.classList.add('translate-x-0');
            }, 10);
            
            setTimeout(() => {
                notification.classList.remove('translate-x-0');
                notification.classList.add('translate-x-full');
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, 3000);
        }

        // Hàm cập nhật trạng thái đơn hàng
        function updateOrderStatus(orderId, newStatus) {
            const select = event.target;
            const currentStatus = select.getAttribute('data-current-status');
            
            if (newStatus === currentStatus) {
                return;
            }
            
            if (!confirm(`Bạn có chắc chắn muốn chuyển trạng thái đơn hàng sang "${newStatus}"?`)) {
                select.value = currentStatus;
                return;
            }
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
            
            fetch('/Admin/Orders/UpdateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({
                    orderId: orderId,
                    newStatus: newStatus
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message || 'Cập nhật trạng thái thành công', 'success');
                    // Reload page to reflect changes
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    showNotification(data.message || 'Có lỗi xảy ra khi cập nhật trạng thái', 'error');
                    select.value = currentStatus;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Có lỗi xảy ra khi cập nhật trạng thái. Vui lòng thử lại.', 'error');
                select.value = currentStatus;
            });
        }
    </script>
</body>
</html>

