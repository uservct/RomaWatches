@using Microsoft.AspNetCore.Identity
@using RomaWatches.Models
@using Microsoft.EntityFrameworkCore
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "ROMA WATCHES - Admin Dashboard";
    Layout = null;
    
    var user = await UserManager.GetUserAsync(User);
    if (user == null || user.Role != "admin")
    {
        Context.Response.Redirect("/");
        return;
    }
    
    // Lấy dữ liệu từ ViewBag
    var totalRevenue = ViewBag.TotalRevenue as decimal? ?? 0;
    var newOrdersCount = ViewBag.NewOrdersCount as int? ?? 0;
    var totalProductsSold = ViewBag.TotalProductsSold as int? ?? 0;
    var recentOrders = ViewBag.RecentOrders as List<Order> ?? new List<Order>();
    var topProducts = ViewBag.TopProducts as List<TopProductViewModel> ?? new List<TopProductViewModel>();
    
    // Helper functions
    string GetOrderStatusText(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "Đang xử lý",
            OrderStatus.Approved => "Đã duyệt",
            OrderStatus.Completed => "Đã giao",
            OrderStatus.Cancelled => "Đã hủy",
            _ => status.ToString()
        };
    }
    
    string GetOrderStatusColor(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300",
            OrderStatus.Approved => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
            OrderStatus.Completed => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
            OrderStatus.Cancelled => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
            _ => "bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-300"
        };
    }
}
<!DOCTYPE html>
<html class="light" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#135bec",
                        "background-light": "#f6f6f8",
                        "background-dark": "#101622",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-gray-900 dark:text-white">
    <div class="flex h-screen w-full">
        <aside class="flex w-64 flex-col bg-white dark:bg-gray-900/50 p-4 border-r border-gray-200 dark:border-gray-800">
            <div class="flex flex-col gap-4">
                <div class="flex items-center gap-3">
                    <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10" data-alt="ROMA WATCHES brand logo" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuAxamz8lB6XbwoLkt1FKYVjvKYWT11Ax5yrp284ZeLs59dCdZTCHOtiH3Fc2N7twBeBliLe1ZC6V9F5tzJ6S8i3cyP1GyDJclakY7h83mg7jv33a5geNSqTRrMRCaS3UKr4BwwGxDraibBjNFFnN7YbAN3cjrQqp1y_4Hp5La2NluKgUhq0OzujLGUO5qK7ogabgYRECwMNI46yUxfJFj8C6MddWct8iir45nIJPCBG3xm-Z-dzM-ziKh4XN9Oph_kepr1VUykTHVE");'></div>
                    <div class="flex flex-col">
                        <h1 class="text-gray-900 dark:text-white text-base font-medium leading-normal">ROMA WATCHES</h1>
                        <p class="text-gray-500 dark:text-gray-400 text-sm font-normal leading-normal">Admin Panel</p>
                    </div>
                </div>
                <nav class="flex flex-col gap-2 mt-4">
                    <a class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary/20 text-primary" asp-controller="Admin" asp-action="Dashboard">
                        <span class="material-symbols-outlined font-bold" style="font-variation-settings: 'FILL' 1;">dashboard</span>
                        <p class="text-sm font-bold leading-normal">Bảng điều khiển</p>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" asp-controller="Admin" asp-action="Orders">
                        <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">shopping_cart</span>
                        <p class="text-sm font-medium leading-normal">Đơn hàng</p>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="#">
                        <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">inventory_2</span>
                        <p class="text-sm font-medium leading-normal">Sản phẩm</p>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="#">
                        <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">group</span>
                        <p class="text-sm font-medium leading-normal">Khách hàng</p>
                    </a>
                </nav>
            </div>
            <div class="mt-auto flex flex-col gap-1">
                <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="#">
                    <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">settings</span>
                    <p class="text-sm font-medium leading-normal">Cài đặt</p>
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="w-full">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg w-full text-left">
                        <span class="material-symbols-outlined text-gray-800 dark:text-gray-200">logout</span>
                        <p class="text-sm font-medium leading-normal">Đăng xuất</p>
                    </button>
                </form>
            </div>
        </aside>
        <main class="flex-1 overflow-y-auto p-8">
            <div class="max-w-7xl mx-auto">
                <div class="flex flex-wrap justify-between items-start gap-4 mb-6">
                    <div class="flex flex-col gap-2">
                        <h1 class="text-gray-900 dark:text-white text-3xl font-bold leading-tight">Tổng quan</h1>
                        <p class="text-gray-500 dark:text-gray-400 text-base font-normal leading-normal">Chào mừng trở lại, đây là tổng quan hiệu suất cửa hàng của bạn.</p>
                    </div>
                    <button class="flex items-center justify-center gap-2 overflow-hidden rounded-lg h-10 px-4 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm font-medium leading-normal tracking-wide hover:bg-gray-200 dark:hover:bg-gray-700">
                        <span class="material-symbols-outlined text-base">calendar_today</span>
                        <span class="truncate">30 ngày qua</span>
                        <span class="material-symbols-outlined text-base">expand_more</span>
                    </button>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-800 flex flex-col gap-2">
                        <div class="flex items-center justify-between">
                            <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Tổng doanh thu</p>
                            <span class="material-symbols-outlined text-green-500">payments</span>
                        </div>
                        <h2 class="text-gray-900 dark:text-white text-3xl font-bold">@totalRevenue.ToString("N0")₫</h2>
                        <p class="text-green-600 dark:text-green-400 text-sm font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-base">trending_up</span>
                            <span>30 ngày</span>
                        </p>
                    </div>
                    <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-800 flex flex-col gap-2">
                        <div class="flex items-center justify-between">
                            <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Đơn hàng mới</p>
                            <span class="material-symbols-outlined text-blue-500">shopping_cart</span>
                        </div>
                        <h2 class="text-gray-900 dark:text-white text-3xl font-bold">@newOrdersCount.ToString("N0")</h2>
                        <p class="text-green-600 dark:text-green-400 text-sm font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-base">trending_up</span>
                            <span>30 ngày</span>
                        </p>
                    </div>
                    <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-800 flex flex-col gap-2">
                        <div class="flex items-center justify-between">
                            <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Tổng sản phẩm đã bán</p>
                            <span class="material-symbols-outlined text-orange-500">sell</span>
                        </div>
                        <h2 class="text-gray-900 dark:text-white text-3xl font-bold">@totalProductsSold.ToString("N0")</h2>
                        <p class="text-green-600 dark:text-green-400 text-sm font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-base">trending_up</span>
                            <span>30 ngày</span>
                        </p>
                    </div>
                    <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-800 flex flex-col gap-2">
                        <div class="flex items-center justify-between">
                            <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Lượt truy cập</p>
                            <span class="material-symbols-outlined text-purple-500">visibility</span>
                        </div>
                        <h2 class="text-gray-900 dark:text-white text-3xl font-bold">-</h2>
                        <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Chưa có dữ liệu</p>
                    </div>
                </div>
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <div class="lg:col-span-2 flex flex-col gap-8">
                        <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-800">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Xu hướng doanh thu</h3>
                            <div class="h-80">
                                <canvas id="salesChart"></canvas>
                            </div>
                        </div>
                        <div class="bg-white dark:bg-gray-900/50 rounded-xl shadow-sm border border-gray-200 dark:border-gray-800">
                            <div class="p-6 flex justify-between items-center">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Đơn hàng gần đây</h3>
                                <a class="text-sm font-medium text-primary hover:underline" asp-controller="Admin" asp-action="Orders">Xem tất cả</a>
                            </div>
                            <div class="overflow-x-auto">
                                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                                    <thead class="text-xs text-gray-700 dark:text-gray-300 uppercase bg-gray-50 dark:bg-gray-800">
                                        <tr>
                                            <th class="px-6 py-3 font-semibold" scope="col">Mã Đơn hàng</th>
                                            <th class="px-6 py-3 font-semibold" scope="col">Khách hàng</th>
                                            <th class="px-6 py-3 font-semibold" scope="col">Tổng tiền</th>
                                            <th class="px-6 py-3 font-semibold" scope="col">Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (recentOrders != null && recentOrders.Any())
                                        {
                                            @foreach (var order in recentOrders)
                                            {
                                                var statusText = GetOrderStatusText(order.Status);
                                                var statusColor = GetOrderStatusColor(order.Status);
                                                <tr class="bg-white dark:bg-gray-900/50 border-b dark:border-gray-800 hover:bg-gray-50 dark:hover:bg-gray-800/50">
                                                    <td class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">
                                                        <a asp-controller="Admin" asp-action="OrderDetails" asp-route-id="@order.Id" class="text-primary hover:underline">#RW@order.Id</a>
                                                    </td>
                                                    <td class="px-6 py-4">@order.FullName</td>
                                                    <td class="px-6 py-4">@order.TotalAmount.ToString("N0")₫</td>
                                                    <td class="px-6 py-4">
                                                        <span class="inline-flex items-center gap-1.5 py-1.5 px-3 rounded-full text-xs font-medium @statusColor">@statusText</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">Chưa có đơn hàng</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="lg:col-span-1">
                        <div class="bg-white dark:bg-gray-900/50 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-800">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Sản phẩm bán chạy nhất</h3>
                            <ul class="flex flex-col gap-4">
                                @if (topProducts != null && topProducts.Count > 0)
                                {
                                    @foreach (var product in topProducts)
                                    {
                                        <li class="flex items-center gap-4">
                                            <img alt="@product.ProductName" class="w-16 h-16 object-cover rounded-lg" src="@(string.IsNullOrEmpty(product.ProductImageUrl) ? "https://images.unsplash.com/photo-1523275335684-37898b6baf30" : product.ProductImageUrl)" />
                                            <div class="flex-1">
                                                <p class="font-semibold text-gray-900 dark:text-white">@product.ProductName</p>
                                                <p class="text-sm text-gray-500 dark:text-gray-400">Đã bán: @product.TotalSold</p>
                                            </div>
                                            <p class="font-semibold text-gray-800 dark:text-gray-200">@product.ProductPrice.ToString("N0")₫</p>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="text-gray-500 dark:text-gray-400 text-sm">Chưa có dữ liệu</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        const ctx = document.getElementById('salesChart');
        if (ctx) {
            const isDarkMode = document.documentElement.classList.contains('dark');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Tuần 1', 'Tuần 2', 'Tuần 3', 'Tuần 4', 'Tuần 5', 'Tuần 6', 'Tuần 7', 'Tuần 8'],
                    datasets: [{
                        label: 'Doanh thu',
                        data: [12, 19, 15, 25, 22, 30, 28, 35],
                        borderColor: '#135bec',
                        backgroundColor: 'rgba(19, 91, 236, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value + 'M₫';
                                },
                                color: isDarkMode ? '#9ca3af' : '#6b7280'
                            },
                            grid: {
                                color: isDarkMode ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.1)'
                            }
                        },
                        x: {
                            ticks: {
                                color: isDarkMode ? '#9ca3af' : '#6b7280'
                            },
                            grid: {
                                display: false
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }
    </script>
</body>
</html>
