@using Microsoft.AspNetCore.Identity
@using RomaWatches.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    // Thiết lập tiêu đề trang và layout (Layout = null vì trang Admin có layout riêng biệt).
    ViewData["Title"] = "ROMA WATCHES - Admin Dashboard";
    Layout = null;
    
    // Lấy thông tin người dùng hiện tại.
    var user = await UserManager.GetUserAsync(User);
    
    // Kiểm tra quyền Admin. Nếu không phải admin, chuyển hướng về trang chủ.
    // Mặc dù đã có [Authorize] ở Controller, việc kiểm tra lại ở View là một lớp bảo mật bổ sung.
    if (user == null || user.Role != "admin")
    {
        Context.Response.Redirect("/");
        return;
    }
}

